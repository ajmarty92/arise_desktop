{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Arise Desktop",
  "version": "1.0.0",
  "identifier": "com.arise.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Arise Desktop",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Entertainment",
    "shortDescription": "AI-Powered Video Wallpapers",
    "longDescription": "Transform your Windows desktop with stunning AI-powered video wallpapers, generative fill, parallax effects, and smart context-aware features.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}