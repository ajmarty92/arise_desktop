{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Arise Desktop",
  "version": "1.0.0",
  "identifier": "com.arise.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Arise Desktop",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.arise.desktop",
    "category": "Entertainment",
    "shortDescription": "AI-Powered Video Wallpapers",
    "longDescription": "Transform your Windows desktop with stunning AI-powered video wallpapers, generative fill, parallax effects, and smart context-aware features.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "process:allow-exit",
    "process:allow-relaunch",
    "window:allow-close",
    "window:allow-hide",
    "window:allow-show",
    "window:allow-minimize",
    "window:allow-maximize",
    "window:allow-unmaximize",
    "window:allow-start-dragging",
    "window:allow-set-always-on-top"
  ]
}